{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "name": "category"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "page.content"
      ]
    },
    "sections": {
      "via": "category",
      "collection": "section"
    }
  }
}
